<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_medicine_checklist"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/bottom_stroke_light_purple"
        app:layout_constraintBottom_toTopOf="@id/weekcalendar_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.DayNight.ActionBar">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="복용 약 관리"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </androidx.appcompat.widget.Toolbar>

    <!-- 달력 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/weekcalendar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/scrollView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <include
            android:id="@+id/titlesContainer"
            layout="@layout/calendar_day_titles_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.kizitonwose.calendar.view.WeekCalendarView
            android:id="@+id/meal_calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:cv_dayViewResource="@layout/week_calendar_day_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titlesContainer" />

    </androidx.constraintlayout.widget.ConstraintLayout>




    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/weekcalendar_layout"
        app:layout_constraintBottom_toTopOf="@id/buttonLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/meal_content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="오늘 먹어야 하는\n약을 확인해보세요"
                android:layout_marginTop="10dp"
                android:layout_marginStart="40px"
                android:textColor="#000"
                android:textSize="18dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="복용이 확인되지 않은 약이 있어요 워치에 알람보내기"
                android:layout_marginTop="5dp"
                android:layout_marginStart="40px"
                android:textColor="@color/덜진한회색"
                android:textSize="10dp"
                android:textStyle="bold"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">
                <LinearLayout
                    android:id="@+id/red_box"
                    android:layout_width="match_parent"
                    android:layout_height="92dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="horizontal"
                    android:background="@drawable/medicine_redbox"
                    android:gravity="center_vertical"
                    android:padding="40px"
                    android:layout_marginTop="20px">

                    <ImageView
                        android:layout_width="57dp"
                        android:layout_height="57dp"
                        android:src="@drawable/medicine" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12시 30분"
                            android:textColor="#000"
                            android:textSize="16dp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="카바마제핀"
                            android:textColor="#000"
                            android:textSize="14dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <CheckBox
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/medicine_check_button"
                        android:button="@null"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="116dp"
                    android:layout_height="22dp"
                    android:layout_alignEnd="@id/red_box"
                    android:layout_marginEnd="2dp"
                    android:layout_marginBottom="10px"
                    android:background="@drawable/red_badge"
                    android:padding="5px"
                    android:text="복용시간 지남"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="12dp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/orange_box"
                android:layout_width="match_parent"
                android:layout_height="92dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:orientation="horizontal"
                android:background="@drawable/medicine_orangebox"
                android:gravity="center_vertical"
                android:padding="40px"
                android:layout_marginTop="20px">

                <ImageView
                    android:layout_width="57dp"
                    android:layout_height="57dp"
                    android:src="@drawable/medicine"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12시 30분"
                        android:textColor="#000"
                        android:textSize="16dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="카바마제핀"
                        android:textColor="#000"
                        android:textSize="14dp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <CheckBox
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/medicine_check_button"
                    android:button="@null"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/purple_box"
                android:layout_width="match_parent"
                android:layout_height="92dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:orientation="horizontal"
                android:background="@drawable/medicine_purplebox"
                android:gravity="center_vertical"
                android:padding="40px"
                android:layout_marginTop="50px">

                <ImageView
                    android:layout_width="57dp"
                    android:layout_height="57dp"
                    android:src="@drawable/medicine" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="17시 30분"
                        android:textColor="#000"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="카바마제핀"
                        android:textColor="#000"
                        android:textSize="40px"
                        android:textStyle="bold"/>
                </LinearLayout>

                <CheckBox
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/medicine_check_button"
                    android:button="@null"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="92dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:orientation="horizontal"
                android:background="@drawable/medicine_purplebox"
                android:gravity="center_vertical"
                android:padding="40px"
                android:layout_marginTop="50px">

                <ImageView
                    android:layout_width="57dp"
                    android:layout_height="57dp"
                    android:src="@drawable/medicine" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="17시 30분"
                        android:textColor="#000"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="카바마제핀"
                        android:textColor="#000"
                        android:textSize="40px"
                        android:textStyle="bold"/>
                </LinearLayout>

                <CheckBox
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/medicine_check_button"
                    android:button="@null"
                    />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <Button
            android:id="@+id/add_existing_medicine_button"
            android:layout_width="310dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/purple_solid_button_shape"
            android:gravity="center"
            android:text="기존 약 관리하기"
            android:textColor="@color/메인보라"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <Button
            android:id="@+id/add_medicine_button"
            android:layout_width="310dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/purple_button_shape"
            android:gravity="center"
            android:text="약 추가하기"
            android:textColor="@color/white"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
