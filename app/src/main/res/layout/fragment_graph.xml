<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".GraphFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--graph set1-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/graph1_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/graph2_layout"
            >

    <!-- TODO: Update blank fragment layout -->
            <TextView
                android:id="@+id/seizure_time_graph_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="35dp"
                android:text="경련 지속시간 추이"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/seizure_time_graph">

            </TextView>

            <ImageView
                android:id="@+id/seizure_time_graph"
                android:layout_width="340dp"
                android:layout_height="150dp"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/seizure_time_graph_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/light_purple_box"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--graph set2-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/graph2_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="15dp"
            app:layout_constraintTop_toBottomOf="@id/graph1_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >

            <!-- TODO: Update blank fragment layout -->
            <TextView
                android:id="@+id/graph2_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="35dp"
                android:text="경련 지속시간 추이"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/graph2">

            </TextView>

            <ImageView
                android:id="@+id/graph2"
                android:layout_width="340dp"
                android:layout_height="150dp"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/graph2_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/light_purple_box"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--그래프 요소 또 추가가능-->

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>