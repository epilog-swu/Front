<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sign_up_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="일지 작성"
        android:textSize="18sp"
        android:textColor="#000000"
        android:gravity="center"
        android:background="@drawable/bottom_stroke_light_purple"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp"/>

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintBottom_toTopOf="@id/button5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/diary_container_shape"
            android:layout_marginTop="34dp"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp"
            android:padding="10dp">

            <!-- Instruction Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*시간대를 입력해주세요"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp" />

            <!-- Time Buttons Grid -->
            <GridLayout
                android:id="@+id/gridLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"
                android:layout_marginBottom="30dp">

                <Button
                    android:layout_width="126.51dp"
                    android:layout_height="78.74dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:background="@drawable/seizure_button"
                    android:text="아침식사 전" />

                <Button
                    android:layout_width="126.51dp"
                    android:layout_height="78.74dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:background="@drawable/seizure_button"
                    android:text="아침식사 후" />

                <Button
                    android:layout_width="126.51dp"
                    android:layout_height="78.74dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:background="@drawable/seizure_button"
                    android:text="점심식사 전" />

                <Button
                    android:layout_width="126.51dp"
                    android:layout_height="78.74dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:background="@drawable/seizure_button"
                    android:text="점심식사 후" />

                <Button
                    android:layout_width="126.51dp"
                    android:layout_height="78.74dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:background="@drawable/seizure_button"
                    android:text="저녁식사 전" />

                <Button
                    android:layout_width="126.51dp"
                    android:layout_height="78.74dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:background="@drawable/seizure_button"
                    android:text="저녁식사 후" />

                <Button
                    android:layout_width="126.51dp"
                    android:layout_height="78.74dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:background="@drawable/seizure_button"
                    android:text="자기 전" />

                <Button
                    android:id="@+id/button_time_input"
                    android:layout_width="126.51dp"
                    android:layout_height="78.74dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:background="@drawable/seizure_button"
                    android:text="시간 입력" />
            </GridLayout>

            <!-- TimePicker -->
            <TimePicker
                android:id="@+id/timePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:timePickerMode="spinner" />
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Button -->
    <Button
        android:id="@+id/button5"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/purple_button_shape"
        android:text="다음으로"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="DuplicateIds" />

</androidx.constraintlayout.widget.ConstraintLayout>
