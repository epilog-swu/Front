<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/graph_weight_marker"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/graph_weight_marker_head"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/graph_marker_weight"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/graph_weight_marker_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="24.07.01"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/graph_weight_marker_plain_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:ellipsize="end"
                android:singleLine="true"
                android:text=" 몸무게"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/graph_weight_marker_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:ellipsize="end"
                android:singleLine="true"
                android:text=" 27.01%"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/graph_weight_marker_tail"
            android:layout_width="17dp"
            android:layout_height="12dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/graph_marker_weight_tail"
            app:layout_constraintTop_toBottomOf="@+id/graph_weight_marker_head" />
    </LinearLayout>
</RelativeLayout>