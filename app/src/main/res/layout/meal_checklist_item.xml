<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:id="@+id/red_box"
        android:layout_width="334dp"
        android:layout_height="92dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        android:background="@drawable/medicine_redbox"
        android:gravity="center_vertical"
        android:padding="40px"
        android:layout_marginTop="20px">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/food_basic_image1"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/meal_checklist_mealtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9시 30분"
                android:textColor="#000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/meal_checklist_occurance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아침식사"
                android:textColor="#000"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/meal_checklist_addmeal_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:text="식단을 추가해주세요"
                android:textSize="10dp"/>
        </LinearLayout>

        <CheckBox
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/meal_checklist_checkbtn"
            android:button="@null"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/mealtime_lateTV"
        android:layout_width="116dp"
        android:layout_height="22dp"
        android:text="식사시간 지남"
        android:textSize="12dp"
        android:textAlignment="center"
        android:background="@drawable/red_badge"
        android:textColor="#fff"
        android:layout_alignEnd="@id/red_box"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10px"
        android:visibility="visible"
        android:padding="5px"/>
</RelativeLayout>
