<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical" >
    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">
        <LinearLayout
            android:id="@+id/seizure_edit_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="50dp"
                android:text="경련 중 발생한 변화를 선택해주세요"
                android:textColor="@color/검정색"
                android:textSize="18dp" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/seizure_button"
                android:button="@null"
                android:drawableEnd="@drawable/seizure_check_button"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="알 수 없음"
                android:textColor="@color/검정색"
                android:textSize="16dp" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/seizure_button"
                android:button="@null"
                android:drawableEnd="@drawable/seizure_check_button"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="의식의 변화, 또렷함 혹은 혼돈상태"
                android:textColor="@color/검정색"
                android:textSize="16dp" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/seizure_button"
                android:button="@null"
                android:drawableEnd="@drawable/seizure_check_button"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="대화 및 이해 능력"
                android:textColor="@color/검정색"
                android:textSize="16dp" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/seizure_button"
                android:button="@null"
                android:drawableEnd="@drawable/seizure_check_button"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="생각, 기억, 감정, 인식의 변화"
                android:textColor="@color/검정색"
                android:textSize="16dp" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/seizure_button"
                android:button="@null"
                android:drawableEnd="@drawable/seizure_check_button"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="시각 변화, 눈 찡긋거림, 눈 깜박임, 눈동자 굴림, 침 흘림"
                android:textColor="@color/검정색"
                android:textSize="16dp" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/seizure_button"
                android:button="@null"
                android:drawableEnd="@drawable/seizure_check_button"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="몸이 뻣뻣해 지거나 늘어짐"
                android:textColor="@color/검정색"
                android:textSize="16dp" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/seizure_button"
                android:button="@null"
                android:drawableEnd="@drawable/seizure_check_button"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="갑작스럽게 움찔거림, 강직, 몸 뒤틀림, 넘어짐"
                android:textColor="@color/검정색"
                android:textSize="16dp" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/seizure_button"
                android:button="@null"
                android:drawableEnd="@drawable/seizure_check_button"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="입술 쩝쩝거리기, 씹기, 옷을 움켜쥠, 손 문지르기, 발 두드리기, 착탈의"
                android:textColor="@color/검정색"
                android:textSize="16dp" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/seizure_button"
                android:button="@null"
                android:drawableEnd="@drawable/seizure_check_button"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="걷기, 이리저리 방황하기, 달리기"
                android:textColor="@color/검정색"
                android:textSize="16dp" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/seizure_button"
                android:button="@null"
                android:drawableEnd="@drawable/seizure_check_button"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="호흡, 피부색 변화, 땀 흘림"
                android:textColor="@color/검정색"
                android:textSize="16dp" />
        </LinearLayout>
</ScrollView>
<Button
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@drawable/button"
    android:textColor="@color/하얀색"
    android:gravity="center"
    android:textSize="20dp"
    android:text="다음" />
</LinearLayout>