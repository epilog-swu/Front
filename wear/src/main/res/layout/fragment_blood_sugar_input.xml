<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/blood_sugar_time_form"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.BloodSugarInputFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:layout_marginTop="10dp">
            <EditText
                android:id="@+id/bloodSugarLevelInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:hint="혈당수치 입력"
                android:textSize="16dp"
                android:textColor="@color/검정색"
                android:inputType="numberDecimal"
                android:gravity="center_horizontal"
                android:layout_gravity="center"
                android:padding="16dp"
                android:background="@color/제일연한보라"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="mg/dl"
                android:textColor="@color/검정색"
                android:textSize="12sp" />
        </LinearLayout>
        <Button
            android:id="@+id/blood_sugar_submit_btn"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:text="완료"
            android:background="@drawable/checklist_dialog_btn"
            android:textColor="@color/검정색"
            android:textSize="12sp" />
    </LinearLayout>
</FrameLayout>
