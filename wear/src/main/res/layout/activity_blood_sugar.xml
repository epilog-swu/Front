<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/blood_sugar_scroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:paddingBottom="50dp">

        <TextView
            android:id="@+id/blood_sugar_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/blood_sugar_title"
            android:textColor="@color/검정색"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/blood_sugar_sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="시간대와 수치를 입력해주세요"
            android:textColor="@color/검정색"
            android:textSize="10sp"
            app:layout_constraintTop_toBottomOf="@+id/blood_sugar_title" />

        <FrameLayout
            android:id="@+id/blood_sugar_input_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/blood_sugar_sub" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
